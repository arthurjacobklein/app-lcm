<p id="notice"><%= notice %></p>
  <div class="container m-5">
  <div class="card">
    <div class="card-header">
      Profile
    </div>
    <div class="card-body">
      <p class="card-text">Company name : <%= @brand.company_name %></p>
      <p class="card-text">First name : <%= @brand.first_name %></p>
      <p class="card-text">Last name : <%= @brand.last_name %></p>
      <p class="card-text">Phone number : <%= @brand.phone_number %></p>
      <p class="card-text"><%= link_to "Website", @brand.website %></p>
      <%= link_to 'Edit profil', edit_brand_registration_path(:id), class:"btn btn-primary mr-3" %>
      <%= link_to 'Add product', new_product_path, class:"btn btn-success" %>
    </div>
  </div>
  </div>
  <% @brand.products.each do |product| %>
  <div class="col-md-3 col-sm-6 col-xs-12 grid-item cat1">
    <div class="shop hover-style mb-30">
      <div class="shop-img">
        <%=link_to image_tag("https://i.imgur.com/uwliklH.jpg"), product_path(product.id)%>
          </div>
          <span class="new-price"><%= number_to_currency product.price %></span>
        </div>

      </div>
    </div>
  </div>
  <% end %>
