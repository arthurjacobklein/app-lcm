<div class="container">

    <div class="row">
      <div class="text-center">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#mynewbrand">
            New brand
          </button>
      </div>
    </div>

    <br>
    <hr>

    <div class="row" id="container_brands">
        <%= render @brands %>
    </div>


    <!-- Modal  create action -->
      <%= form_for(@brand, remote: true) do |f| %>
        <div class="modal fade" id="mynewbrand" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-website">

            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-company_name" id="myModalLabel">brand</h4>
            </div>

            <div class="modal-body">
              <div class="field">
                <%= f.label :company_name %><br>
                <%= f.text_area :company_name, class: "form-control brand_company_name" %>
              </div>
              <div class="field">
                <%= f.label :website %><br>
                <%= f.text_area :website, class: "form-control brand_website" %>
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewbrandclose">Close</button>
              <%= submit_tag "Create", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        </div>
      <% end %>
    <!-- Modal -->



</div>
