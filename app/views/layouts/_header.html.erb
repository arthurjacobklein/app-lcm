<header>
  <div class="header-area">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3 col-lg-3  col-sm-4 col-xs-4">
            <h1 class="mt-4"><%= link_to "twist market", products_path%></h1>
            <% if current_user %>
              <p>User logged in : <%= current_user.email%></p>
            <% end %>
            <% if current_brand %>
              <p>Brand logged in : <%= current_brand.email %></p>
            <% end %>
        </div>
        <div class="col-md-6 col-lg-6 col-sm-2 col-xs-2 text-center">
          <div class="main-menu display-inline">
            <nav>
              <ul class="menu">
                <li>
                <%= link_to products_path do %>
                  HOME<i class="pe-7s-angle-down"></i>
                <% end %>
                  <ul>
                    <li><%= link_to "Products", products_path %></li>
                    <li><%= link_to "Brands", brands_path %></li>

                  </ul>
                </li>
                <li><%= link_to "ABOUT US", about_us_path%></li>
                <li><%= link_to "Contact us", contact_us_path%></li>
                <li>
                <%= link_to "#" do %>
                  My account<i class="pe-7s-angle-down"></i>
                <% end %>
                  <ul>
                     <% if current_user %>
                    <li><%= link_to "Profile", user_path(current_user) %></li>
                    <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                    <% end %>
                    <% if current_brand %>
                   <li><%= link_to "Dashboard", brand_path(current_brand) %></li>
                   <li><%= link_to "Brand Logout", destroy_brand_session_path, method: :delete %></li>
                    <% end %>
                  </ul>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <div class="col-md-3 col-lg-3 col-xs-6 col-sm-6 text-right text-sm text-res">
          <div class="cart-user-language">
            <div class="shopping-cart ml-30">
              <a class="top-cart" href="cart.html"><i class="pe-7s-cart"></i></a>
              <ul>
                <li>
                  <div class="cart-img">
                    <%= link_to "my cart", cart_path(current_order)%>
                  </div>
                  <div class="cart-content">
                    <h3><a href="#"> 1 X Faded...</a> </h3>
                    <span><b>S, Orange</b></span>
                    <span class="cart-price">£ 16.84</span>
                  </div>
                  <div class="cart-del">
                    <i class="pe-7s-close-circle"></i>
                  </div>
                </li>
                <li>
                  <div class="cart-img">
                    <a href="#"><img src="assets/img/cart/2.jpg" alt="" /></a>
                  </div>
                  <div class="cart-content">
                    <h3><a href="#"> 1 X Faded...</a> </h3>
                    <span><b>S, Orange</b></span>
                    <span class="cart-price">£ 16.84</span>
                  </div>
                  <div class="cart-del">
                    <i class="pe-7s-close-circle"></i>
                  </div>
                </li>
                <li>
                  <div class="shipping">
                    <span class="f-left">Shipping </span>
                    <span class="f-right cart-price"> $7.00</span>
                  </div>
                  <hr class="shipping-border" />
                  <div class="shipping">
                    <span class="f-left"> Total </span>
                    <span class="f-right cart-price">$692.00</span>
                  </div>
                </li>
                <li class="checkout m-0 mr-5"><a href="#">checkout <i class="pe-7s-angle-right"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="mobile-menu"></div>
    </div>
  </div>
</header>
