<div class="breadcrumb-area">
  <div class="container-fluid text-center d-flex justify-content-center">
    <div class="breadcrumb-stye ptb-40 mt-5 breadcrumb_header">
      <h2 class="page-title">Profile</h2>
    </div>
  </div>
</div>

<div class="container col-12 d-flex flex-column align-items-center mt-5 mb-5">
  <h1 class="mb-5">
    <%= @user.first_name %><span> </span><%= @user.last_name %>
  </h1>
  <p>Contact informations</p>
  <div class="d-flex flex-row">
    <h6>Company:&nbsp</h6>
    <h6><%= @user.company_name%></h6>
  </div>

  <div class="d-flex flex-row">
    <h6>Website:&nbsp</h6>
    <h6 class="text-info"><%= link_to @user.website %></h6>
  </div>

  <div class="d-flex flex-row mb-2">
    <h6>Email:&nbsp</h6>
    <h6 class="text-info"><%= link_to @user.email %></h6>
  </div>
</div>
