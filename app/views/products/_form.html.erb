<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.text_area :gender %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </div>
  <div class="field">
    <%= f.label :reference %><br>
    <%= f.text_area :reference %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </div>
  <div class="field">
    <%= file_field_tag :product_images, :multiple => true, direct_upload: true %>
    <%= submit_tag "upload new photos ", class:"btn btn-success btn-sm" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
