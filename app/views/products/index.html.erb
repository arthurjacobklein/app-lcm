<div class="slider-area style-1 d-flex align-items-center">
  <div class="container-fluid text-center">
    <div class="slider-text">
      <h2 class="text-light mixblend">summer Collection 2019 </h2>
      <a href="shop.html">Shop The Collection</a>
    </div>
  </div>
</div>

<div class="shop-area ptb-90">
  <div class="container-fluid">
    <div class="shop-style-all">

      <% @products.each do |product| %>
      <div class="col-md-3 col-sm-6 col-xs-12 grid-item cat1">
        <div class="shop hover-style mb-30">
          <div class="shop-img">
            <a href="preduct-details.html">
              <img src="https://i.imgur.com/uwliklH.jpg" alt="">
            </a>
            <div class="shop-title title-style-1">
              <h3><a href="preduct-details.html"><%= product.title %></a></h3>
              <span class="new-price"><%= number_to_currency product.price %></span>
            </div>
            <div class="product-cart">
              <a href="#"><i class="pe-7s-cart"></i></a>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>